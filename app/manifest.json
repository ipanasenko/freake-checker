{
  "name": "__MSG_appName__",
  "version": "0.6.0",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["scripts/jquery-2.1.1.min.js", "scripts/defaultSettings.js", "scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://freake.ru/*"],
      "exclude_matches": ["*://freake.ru/favorites*"],
      "js": ["scripts/contentScript.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "freake checker",
    "default_popup": "popup.html"
  },
  "permissions": ["http://www.freake.ru/", "http://freake.ru/", "storage", "unlimitedStorage", "alarms"],
  "options_page": "options.html"
}
